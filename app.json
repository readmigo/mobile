{
  "expo": {
    "name": "Readmigo",
    "slug": "readmigo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "readmigo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D5A7B"
    },
    "assetBundlePatterns": ["**/*"],
    "locales": {
      "zh-Hans": "./locales/zh-Hans.json"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "rn.readmigo.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Used for scanning book barcodes",
        "NSPhotoLibraryUsageDescription": "Used for uploading avatar",
        "CFBundleDisplayName": "Readmigo"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D5A7B"
      },
      "package": "com.readmigo.app",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-font",
      "expo-secure-store",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#2D5A7B",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "https://api.readmigo.app",
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
